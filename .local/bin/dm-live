#!/bin/sh

# add more args here according to preference
ARGS="--volume=60"
# dmenu theming
# . $HOME/.local/bin/dmenu-theming
notification(){
# change the icon to whatever you want. Make sure your notification server 
# supports it and already configured.

# Now it will receive argument so the user can rename the radio title
# to whatever they want

	notify-send " Playing now: " "$@" --icon=package_multimedia
}

menu(){
	printf "1. Lofi-Hip-Hop\n"
	printf "2. Dream-Ocean\n"
	printf "3. Dua-Lipa\n"
	printf "4. Exit"
}

main() {
	choice=$(menu | dmenu  $prompt $lines $colors $font $xoffset $yoffset $width -p "Play"  | cut -d. -f1)

	case $choice in
		1)
			notification "  Lofi-Hip-Hop  üé∂";
            URL="https://www.youtube.com/watch?v=jfKfPfyJRdk"
			break
			;;
		2)
			notification "  Dream-Ocean   üé∂";
            URL="https://www.youtube.com/watch?v=ndVxD9u95Z0"
			break
			;;

		3)
			notification "  Dua-Lipa   üé∂";
            URL="https://www.youtube.com/watch?v=BFBZ6QybP68"
			break
			;;
	
		4)

            notification "  Stop rofibeats ‚òïÔ∏èüé∂";
            pkill -f streamlink || main
                        break
                        ;;
	esac
    # run mpv with args and selected url
    # added title arg to make sure the pkill command kills only this instance of mpv
    streamlink --title "{author} - {category} - {title}" $URL 480p -p ffplay 
}

pkill -f streamlink || main
