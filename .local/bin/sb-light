#!/bin/sh
# SIGNAL 2

case $BLOCK_BUTTON in
    1) xbacklight -dec +10;;
    2) setsid -f "$TERMINAL" -e "$EDITOR" "$0" >/dev/null 2>&1 &;;
    3) xbacklight -inc +10;;
    4) xbacklight -inc +10;;
    5) xbacklight -dec +10;;
esac
lgt=$(xbacklight | cut -d '.' -f 1)
if [ "$lgt" -eq "100" ]; then
	lgt="MAX"
elif [ "$lgt" -eq 0 ]; then
	lgt="MIN"
elif [ "$lgt" -lt 10 ]; then
	lgt="0$lgt%"
else
	lgt="$lgt%"
fi
printf "ðŸ’¡: %s" "$lgt"
